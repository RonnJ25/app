{
  "version": 2,
  "builds": [
    {
      "src": "templates/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "static/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "templates/index.html" },
    { "src": "/static/(.*)", "dest": "/static/$1" },  // Serve static files
    { "src": ".*", "dest": "/templates/index.html" }  // Fallback for SPAs
  ]
}
